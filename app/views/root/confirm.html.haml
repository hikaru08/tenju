= form_for @contact, :url => root_thanks_path do |f|
  %table.table
    %tr
      %th 名前
      %td
        = f.hidden_field :name_full
        = @contact.name_full
    %tr
      %th メールアドレス
      %td
        = f.hidden_field :email
        = @contact.email
    %tr
      %th お問い合わせ内容
      %td
        = f.hidden_field :content
        = simple_format(@contact.content)
  = f.submit '送信', :class => 'btn btn-primary'